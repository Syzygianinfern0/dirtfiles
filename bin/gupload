#!/bin/bash

for EACH in "$@"; do
    if [ -f "$EACH" ]; then
        echo "Uploading file $EACH."
        gclone copy -P "$EACH" share-dump:
        gclone link share-dump:"$(basename "$EACH")"
    elif [ -d "$EACH" ]; then
        echo "Uploading folder $EACH."
        gclone copy -P "$EACH" share-dump:"$(basename "$EACH")"
        gclone link share-dump:"$(basename "$EACH")"
    else
        echo "Invalid path $EACH."
    fi
done
